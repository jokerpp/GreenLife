<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:crane="http://schemas.android.com/apk/res/cn.crane.application.greenlife"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_index"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dip" >

        <cn.crane.framework.view.smartimage.SmartImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_index_image" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/half_black"
            android:orientation="horizontal"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_time_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/txt_format_time"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/txt_merchant_detail_time"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                style="@style/line_gray_vertical"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_min_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/txt_format_price"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/txt_merchant_detail_mic_price"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                style="@style/line_gray_vertical"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/txt_format_price"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/txt_merchant_detail_price"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dip" >

            <cn.crane.framework.view.smartimage.SmartImageView
                android:id="@+id/iv_merchant_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/test_merchant_logo" />

            <TextView
                android:id="@+id/tv_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="必胜客"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <cn.crane.application.greenlife.view.ViewSettingItem
            android:id="@+id/view_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            crane:arrow_visible="false"
            crane:main_title="@string/txt_my_address"
            crane:right_icon="@drawable/icon_merchant_detail_time"
            crane:right_str="0" />

        <cn.crane.application.greenlife.view.ViewSettingItem
            android:id="@+id/view_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            crane:main_title="@string/txt_my_address"
            crane:right_icon="@drawable/icon_my_address"
            crane:right_str="0" />

        <cn.crane.application.greenlife.view.ViewSettingItem
            android:id="@+id/view_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            crane:arrow_visible="false"
            crane:bottom_line_visible="false"
            crane:main_title="@string/txt_my_daijinquan"
            crane:right_icon="@drawable/icon_merchant_detail_msg"
            crane:right_str="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <cn.crane.application.greenlife.view.ViewSettingItem
            android:id="@+id/view_xin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            crane:arrow_visible="false"
            crane:main_title="@string/txt_my_address"
            crane:right_icon="@drawable/icon_xin"
            crane:right_str="0" />

        <cn.crane.application.greenlife.view.ViewSettingItem
            android:id="@+id/view_zeng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            crane:arrow_visible="false"
            crane:main_title="@string/txt_my_address"
            crane:right_icon="@drawable/icon_zeng"
            crane:right_str="0" />

        <cn.crane.application.greenlife.view.ViewSettingItem
            android:id="@+id/view_zhe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            crane:arrow_visible="false"
            crane:bottom_line_visible="true"
            crane:main_title="@string/txt_my_daijinquan"
            crane:right_icon="@drawable/icon_zhe"
            crane:right_str="0" />
        <cn.crane.application.greenlife.view.ViewSettingItem
            android:id="@+id/view_mian"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            crane:arrow_visible="false"
            crane:bottom_line_visible="false"
            crane:main_title="@string/txt_my_daijinquan"
            crane:right_icon="@drawable/icon_mian"
            crane:right_str="0" />
    </LinearLayout>

</LinearLayout>