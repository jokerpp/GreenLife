<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!--
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="1" >
    </LinearLayout>
    -->

    <RelativeLayout
        android:id="@+id/ll_titleBar"
        style="@style/title_bar" >

        <Button
            android:id="@+id/btn_back"
            style="@style/title_bar_btn"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/btn_back_selector"
            android:text="@string/txt_back"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/title_bar_text"
            android:layout_centerInParent="true"
            android:text="@string/txt_my_shoucang"
            android:textColor="@color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_right"
            style="@style/title_bar_btn"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"
            android:minWidth="70dip"
            android:paddingLeft="10dip"
            android:textColor="@color/txt_gray"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/line_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_collect_merchant"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/txt_merchant_shangjia"
                android:textColor="@color/txt_gray"
                android:textSize="14sp" />

            <View
                style="@style/line_gray_vertical"
                android:layout_marginBottom="13dip"
                android:layout_marginTop="13dip" />

            <TextView
                android:id="@+id/tv_collect_food"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/collect_food"
                android:textColor="@color/txt_gray"
                android:textSize="14sp" />
        </LinearLayout>

       
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_line" />
        
         <View
            android:id="@+id/view_select"
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="@color/main_color" />
    </RelativeLayout>

     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginTop="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent" >
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>